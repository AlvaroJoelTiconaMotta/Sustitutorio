<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAFDA4"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ActNuevoCliente"
    tools:showIn="@layout/act_nuevo_cliente">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="                                                     Nombre"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#EA4A4A" />

    <EditText
        android:id="@+id/edtNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese su nombre..."
        android:textColor="#26359E"
        android:textColorHighlight="#AF3131"
        android:textColorHint="#9A59C1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="                                                   Direccion"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#EA4A4A" />

    <EditText
        android:id="@+id/edtDireccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese su direccion..."
        android:textColor="#26359E"
        android:textColorHighlight="#AF3131"
        android:textColorHint="#9A59C1" />/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="                                                     Email"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#EA4A4A" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese su email..."
        android:textColor="#26359E"
        android:textColorHighlight="#AF3131"
        android:textColorHint="#9A59C1" />/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="                                                   Telefono"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#EA4A4A" />

    <EditText
        android:id="@+id/edtTelefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese su telefono..."
        android:textColor="#26359E"
        android:textColorHighlight="#AF3131"
        android:textColorHint="#9A59C1" />/>


</LinearLayout>